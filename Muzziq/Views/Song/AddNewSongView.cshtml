
@{
	ViewData["Title"] = "Dodaj nowy utwór";
}

<h2>Dodaj nowy utwór</h2>

<form asp-controller="Song" asp-action="AddNewSong" method="post">
	<h3>Tytuł</h3>
	<input name="title" class="form-control" required />

	<h3>Autor</h3>
	<input name="author" class="form-control" required />

	<h3>Album</h3>
	<input name="album" class="form-control" required />

	<h3>Gatunek</h3>(format: YYYY)
	<input type="text" name="genre" pattern="^[1-2][0-9]{3}$" class="form-control" required />

	<h3>Wybierz plik</h3>
	TODO wybór pliku i przesłanie go dalej
	<br/>
	<button type="submit" class="btn btn-default">Dodaj</button>
</form>